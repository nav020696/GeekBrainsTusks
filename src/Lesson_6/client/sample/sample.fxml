<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?scenebuilder-stylesheet /css/Style.css?>

<?import java.net.URL?>
<VBox fx:controller="Lesson_6.client.sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets> <URL value="@/Lesson_6/client/css/Style.css"/> </stylesheets>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox>
        <TextField fx:id="textField" onAction="#sendMsg" HBox.hgrow="ALWAYS" promptText="Введите сообщение..."/>
        <Button fx:id="btn" onAction="#sendMsg" text="Отправить"/>
    </HBox>
</VBox>